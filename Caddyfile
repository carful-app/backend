https://api.carful.local:443 {
    tls internal

    reverse_proxy laravel.test:80 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Port 443
        header_up X-Forwarded-Proto https

        health_timeout 5s
    }
}
